<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.DoanhThuFragment">
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_item_nv"
            android:id="@+id/btnTuNgay"
            android:text="Từ ngày"
            />
        <TextView
            android:layout_marginLeft="30dp"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="25sp"
            android:textColor="@color/mau_toolbar"
            android:hint="yyyy-MM-dd"
            android:id="@+id/tvTuNgay"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_item_nv"
            android:id="@+id/btnDenNgay"
            android:text="Đến ngày"

            />
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="25sp"
            android:textColor="@color/mau_toolbar"
            android:hint="yyyy-MM-dd"
            android:id="@+id/tvDenNgay"
            />


    </LinearLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Doanh Thu"
        android:background="@drawable/shape_item_nv"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/btnDoanhThu"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Doanh Thu"
        android:textStyle="italic"
        android:textColor="@color/mau_toolbar"
        android:id="@+id/tvDoanhThu"
        android:layout_marginTop="30dp"
        />
</LinearLayout>