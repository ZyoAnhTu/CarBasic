<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/imgXe"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/bmw520" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/llXe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgXe"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMaXe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã Xe" />

            <TextView
                android:id="@+id/tvTenXe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Xe" />

            <TextView
                android:id="@+id/tvDongXe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dòng Xe" />

            <TextView
                android:id="@+id/tvNhienLieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhiên Liệu" />

            <TextView
                android:id="@+id/tvGiaBan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="giá bán" />
            <TextView
                android:id="@+id/tvMaLoaiXe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại: " />

           <LinearLayout
               android:layout_marginTop="10dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_weight="1"
                   android:id="@+id/imgDel"
                   android:layout_width="match_parent"
                   android:layout_height="25dp"
                   app:srcCompat="@drawable/delete" />
           </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>