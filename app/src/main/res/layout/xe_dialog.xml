<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:text="Thêm xe"
        android:textColor="@color/mau_toolbar"
        android:textSize="30dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_weight="1"
            android:id="@+id/imgAddImgXeDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/add" />
        <ImageView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:id="@+id/imgXeDialog"
            />

    </LinearLayout>

    <!--    <EditText-->
<!--        android:id="@+id/edMaXe"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:ems="10"-->
<!--        android:inputType="textPersonName"-->
<!--        android:hint="Mã xe"/>-->

    <EditText
        android:id="@+id/edMaXeDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Mã xe"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edTenXeDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Tên xe"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edDongXeDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Dòng xe"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/edNhienLieuDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nhiên liệu" />

    <EditText
        android:id="@+id/edGiaBanDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Giá bán" />

    <Spinner
        android:id="@+id/spnMaLoaiXe"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_margin="20dp"
            android:id="@+id/btnHuyXe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_item_nv"
            android:text="Hủy" />

        <Button

            android:layout_margin="20dp"
            android:id="@+id/btnThemXe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_item_nv"
            android:text="Thêm" />
    </LinearLayout>
</LinearLayout>